<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.kardiga.nicolas.vinditindi.utils.FlickrImageUrlGeneratorUtil" />

        <variable
            name="photo"
            type="com.kardiga.nicolas.vinditindi.first_screen.entity.Photo" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/itemCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:imageUrl="@{FlickrImageUrlGeneratorUtil.generateUrlFromFlickrPhoto(photo)}" />

    </android.support.v7.widget.CardView>

</layout>